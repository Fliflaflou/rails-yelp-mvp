<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>
<% @restaurants.each do |restaurant| %>
<div class="row">
<div class="cardname card">
  <div class="wrapper">
    <div class="header">
      <div class="date">
        <span class="day">12</span>
        <span class="month">Aug</span>
        <span class="year">2016</span>
      </div>
      <ul class="menu-content">
        <li>
          <a href="#" class="fa fa-bookmark-o"></a>
        </li>
        <li><a href="#" class="fa fa-heart-o"><span>18</span></a></li>
        <li><a href="#" class="fa fa-comment-o"><span>3</span></a></li>
      </ul>
    </div>
    <div class="data">
      <div class="content">
        <span class="author"><%= restaurant.name %></span>
        <h1 class="title"><a href="<%= restaurant_path(restaurant) %>"><%= restaurant.name %></a></h1>
        <p class="text"><%= restaurant.address %></p>
        <a href="<%= restaurant_path(restaurant) %>" class="button">Read more</a>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
